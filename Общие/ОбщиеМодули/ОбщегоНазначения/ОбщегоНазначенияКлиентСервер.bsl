	КонецЕсли;
	
	КодРимскойЕдиницы = КодСимвола("Ⅰ"); // U+2160 Roman Number One
	Смещение = Число - 1;
	РимскийЛитерал = Символ(КодРимскойЕдиницы + Смещение);
	
	Возврат РимскийЛитерал;
	
