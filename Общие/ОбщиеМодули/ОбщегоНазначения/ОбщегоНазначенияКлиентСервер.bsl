			Префикс = НРег(Лев(Значение, ДлинаПрефикса));
			Если Префикс = "0x" Тогда
				Возврат ЧислоИзШестнадцатеричнойСтроки(Значение);
			КонецЕсли;
			Если Префикс = "0b" Тогда
				Возврат ЧислоИзДвоичнойСтроки(Значение);
			КонецЕсли;
		КонецЕсли;

